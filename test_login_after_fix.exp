#!/usr/bin/expect -f

set timeout 60
log_user 1

spawn claude /login

expect {
    "Choose login method" {
        puts "\n=== SUCCESS: LOGIN METHOD MENU ==="
        send "1\r"
        expect {
            -re "https://console\\.anthropic\\.com/auth\\?.*" {
                puts "\n=== FOUND PERSONALIZED URL: $expect_out(0,string) ==="
            }
            "Open this URL" {
                puts "\n=== FOUND URL INSTRUCTION ==="
                exp_continue
            }
            "console.anthropic.com" {
                puts "\n=== FOUND CONSOLE REFERENCE ==="
                exp_continue
            }
            timeout {
                puts "\n=== TIMEOUT WAITING FOR URL ==="
            }
        }
    }
    "Invalid API key" {
        puts "\n=== DIRECT API KEY ERROR - TRYING DIFFERENT APPROACH ==="
    }
    "Choose the text style" {
        puts "\n=== STILL SHOWS THEME - SETUP INCOMPLETE ==="
    }
    timeout {
        puts "\n=== TIMEOUT - NO RESPONSE ==="
    }
}

puts "\n=== LOGIN TEST COMPLETE ==="