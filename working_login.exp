#!/usr/bin/expect -f

set timeout 60
log_user 1

spawn claude /login

expect {
    "Choose the text style" {
        puts "\n=== THEME SELECTION ==="
        send "1\r"
        sleep 2
        send "\r"
        sleep 2
        
        expect {
            "Select login method" {
                puts "\n=== LOGIN METHOD MENU SUCCESS! ==="
                send "2\r"  # Choose Console account (option 2)
                
                expect {
                    -re "https://console\\.anthropic\\.com/auth\\?[^\\s]+" {
                        puts "\n=== FOUND PERSONALIZED URL: $expect_out(0,string) ==="
                    }
                    -re "Open this URL in your browser:" {
                        puts "\n=== FOUND URL INSTRUCTION ==="
                        exp_continue
                    }
                    "Visit:" {
                        puts "\n=== FOUND VISIT INSTRUCTION ==="
                        exp_continue
                    }
                    timeout {
                        puts "\n=== TIMEOUT WAITING FOR URL ==="
                    }
                }
            }
            timeout {
                puts "\n=== TIMEOUT AFTER THEME ==="
            }
        }
    }
    timeout {
        puts "\n=== INITIAL TIMEOUT ==="
    }
}

puts "\n=== LOGIN TEST COMPLETE ==="
sleep 2